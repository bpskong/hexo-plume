<div>
  <h1 id="title"><a href="<%- config.root %>"><%= config.title %></a></h1>
  <div id="icons">
    <a href="#" onclick="$('#search-form').slideToggle('fast');$('#search-input').val('');$('#search-input').focus();"><i class="icon-search"></i></a>
    <% if (theme.weibo) { %>
      <a href="<%- theme.weibo %>" target="_blank"><i class="icon-sina-weibo"></i></a>
